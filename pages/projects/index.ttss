.head {
    width: 100%;
    height: 200px;
}
.head .item {
    position: relative;
}
.head .image {
    width: 100%;
}
.head .content {
    position: absolute;
    bottom: 0;
    width: 100%;
    padding-left: 10px;
    line-height: 40px;
    color: #fff;
    background: rgba(0,0,0,.6);
}
.body {
    margin-bottom: 10px;
    padding: 20px 10px;
    background: var(--primary-bg-color);
}
.body .items {
    box-sizing: border-box;
    width: 100%;
    margin-top: 30rpx;
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-gap: 10px;
}
.body .item {
    width: 100%;
    text-align: center;
    background: #f0f0f0;
}
.body .figure {
    width: 100%;
    height: 240rpx;
}
.body .content {
    padding: 10px;
}
.body .title {
    font-size: 14px;
    font-weight: 600;
}
.body .desc {
    font-size: 12px;
    color: #999;
}
.body text {
    display: block;
    margin: 5px 0;
}
.loadmore {
    width: 100%;
    margin-bottom: 10rpx;
    font-size: .8rem;
    text-align: center;
}
